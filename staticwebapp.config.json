{
  "auth": {
    "identityProviders": {
      "azureActiveDirectory": {
        "registration": {
          "openIdIssuer": "https://login.microsoftonline.com/a157a1e5-2a04-45f5-9ca8-bd60db6bafd4/v2.0",
          "clientIdSettingName": "AZURE_CLIENT_ID",
          "clientSecretSettingName": "AZURE_CLIENT_SECRET"
        }
      }
    }
  },
  "routes": [
    {
      "route": "/login.html",
      "allowedRoles": ["anonymous", "authenticated"]
    },
    {
      "route": "/login",
      "allowedRoles": ["anonymous", "authenticated"]
    },
    {
      "route": "/",
      "redirect": "/login.html",
      "allowedRoles": ["anonymous", "authenticated"]
    },
    {
      "route": "/index.html",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/app.js",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/styles.css",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/chat",
      "rewrite": "/index.html",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/api/*",
      "allowedRoles": ["authenticated"]
    }
  ],
  "responseOverrides": {
    "401": {
      "redirect": "/login.html",
      "statusCode": 302
    }
  },
  "platform": {
    "apiRuntime": "python:3.9"
  },
  "globalHeaders": {
    "cache-control": "no-cache, no-store, must-revalidate"
  }
}
